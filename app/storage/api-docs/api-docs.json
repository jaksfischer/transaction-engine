{
    "openapi": "3.0.0",
    "info": {
        "title": "Transaction Engine API",
        "description": "API para criação e processamento assíncrono de transações financeiras",
        "version": "1.0.0"
    },
    "paths": {
        "/api/accounts/{id}/balance": {
            "get": {
                "tags": [
                    "Accounts"
                ],
                "summary": "Consulta saldo da conta",
                "operationId": "c1810a06cff78bccfc24a3554a105468",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Saldo da conta",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "balance": {
                                            "type": "number",
                                            "example": 1000
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Conta não encontrada"
                    }
                }
            }
        },
        "/api/transactions": {
            "post": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Create a financial transaction (async)",
                "description": "Creates a financial transaction. The transaction is created with status 'pending' and processed asynchronously via queue.",
                "operationId": "createTransaction",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "source_account_id",
                                    "destination_account_id",
                                    "amount",
                                    "type"
                                ],
                                "properties": {
                                    "source_account_id": {
                                        "description": "Source account ID",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "destination_account_id": {
                                        "description": "Destination account ID",
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "amount": {
                                        "description": "Transaction amount",
                                        "type": "number",
                                        "format": "float",
                                        "example": 200.5
                                    },
                                    "type": {
                                        "description": "Transaction type",
                                        "type": "string",
                                        "example": "transfer"
                                    },
                                    "idempotency_key": {
                                        "description": "Optional idempotency key to prevent duplicate transactions",
                                        "type": "string",
                                        "example": "c2f1c9c0-8a2a-4c7a-b9f3-1b9e3b1f2e9a"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Transaction successfully created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "source_account_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "destination_account_id": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "amount": {
                                            "type": "number",
                                            "example": 200.5
                                        },
                                        "type": {
                                            "type": "string",
                                            "example": "transfer"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "pending"
                                        },
                                        "idempotency_key": {
                                            "type": "string",
                                            "example": "c2f1c9c0-8a2a-4c7a-b9f3-1b9e3b1f2e9a"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2026-01-02T21:50:44Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2026-01-02T21:50:44Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "202": {
                        "description": "Transaction accepted for asynchronous processing (idempotent request)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "source_account_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "destination_account_id": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "amount": {
                                            "type": "number",
                                            "example": 200.5
                                        },
                                        "type": {
                                            "type": "string",
                                            "example": "transfer"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "pending"
                                        },
                                        "idempotency_key": {
                                            "type": "string",
                                            "example": "c2f1c9c0-8a2a-4c7a-b9f3-1b9e3b1f2e9a"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2026-01-02T21:50:44Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2026-01-02T21:50:44Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Accounts",
            "description": "Accounts"
        },
        {
            "name": "Transactions",
            "description": "Transactions"
        }
    ]
}